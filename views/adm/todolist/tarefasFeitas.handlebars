<h2>Tarefas Feitas</h2>

<ul class="nav nav-tabs">
  <li class="nav-item">
    <a class="nav-link" href="/adm/todolist">Pendente</a>
  </li>
  <li class="nav-item">
    <a class="nav-link active" aria-current="page" href="/adm/todolist/feitas">Feitas</a>
  </li>

</ul>

{{!-- vou listar as tarefas marcadas como concluidas --}}

{{#each tarefasFeitas}}

  <div class="card mt-4">
    <div class="card-body">
        <h4>{{nome}}</h4>
        <br>
        <small>{{comentario}}</small>
        <br><br>
        <small>data de criação: {{dataExibicao}}</small>
        <br><br>

        <div style="display: flex; Align-items: center;">


          <form method="post" action="/adm/todolist/delete">
            <input name="id" type="hidden" value="{{_id}}">
            <button type="submit" class="btn btn-danger">Deletar</button>
          </form>

          <form style="margin-left:5px;" method="post" action="/adm/todolist/mudarstatus">
            <input type="hidden" name="button" value="naoFeito">
            <input name="id" type="hidden" value="{{_id}}">
            <button type="submit" class="btn btn-secondary">Não Feito</button>

          </form>
        </div>
    </div>
  </div>
{{/each}}
